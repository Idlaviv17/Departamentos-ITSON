<Layout title='Departamentos ITSON'>
  <main>
    <div class='gallery'>
      <div class='gallery-item'>
        <img src='/public/bano.jpeg' alt='Ba침o' />
        <div class='overlay'>
          <div class='text'>Ba침o</div>
        </div>
      </div>
      <div class='gallery-item'>
        <img src='/public/cocina.jpeg' alt='Cocina' />
        <div class='overlay'>
